{% extends "base.html" %}
{% block title %}<title>Submit a Listing</title>{% endblock %}
{% block content %}
<div class="container pt-5">
    <div class="row mt-2">
        <div class="col">
            <h1>Submit a Listing</h1>
        </div>
    </div>
    <div class="row mt-2">
        <h4>Fields marked with a red asterisk (<span style='color:red;'>*</span>) are required.</h4>
    </div>
    <form action="/submit-listing" method="POST" enctype="multipart/form-data">
        <div class="row mt-2">
            <div class="col-4">
                <label for="name" class="form-label">Enter your item's name:<strong style='color:red;font-size:'>*</strong></label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <label for="feature" class="form-label">Enter your item's feature:<strong style='color:red;font-size:'>*</strong></label>
                <input type="text" class="form-control" id="feature" name="feature">
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-4">
                <label for="reserve" class="form-label">Enter a reserve amount (optional):</label>
                <input type="number" class="form-control" id="reserve" name="reserve">
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <label for="expiration" class="form-label">Set an expiration date for your auction:<strong style='color:red;font-size:'>*</strong></label>
                <input type="date" class="form-control" id="expiration" name="expiration">
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-4">
                <label for="photo" class="form-label">Include a photo of your vehicle (optional):</label>
                <input class="form-control" type="file" id="photo" name="photo" accept="image/*">
            </div>
        </div>
        <div class="row my-5">
            <div class="col-4">
                <button class="btn main-button" type="submit">Submit Listing</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}